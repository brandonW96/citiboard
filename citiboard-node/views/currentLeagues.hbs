<h1>Current Leagues</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <form method="GET" action="currentLeagues">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-default">
          <input type="radio" name="sortBy" value="oldToNew" autocomplete="off" checked>Oldest to Newest</option>
        </label>
        <label class="btn btn-default">
          <input type="radio" name="sortBy" value="newToOld" autocomplete="off">Newest to Oldest</option>
        </label>
        <label class="btn btn-default">
          <input type="radio" name="sortBy" value="alphabetical" autocomplete="off">Alphabetical</option>
        </label>
        <button class="btn btn-default" type="submit">Sort</button>
      </div>
    </form>

    <ul class="list-group">
    {{#each league}}
      <li class="list-group-item"><a href= {{{leaguePath this.slug}}}>{{this.name}}</a></li>
    {{/each}}
    </ul>
  </div>
</div>
